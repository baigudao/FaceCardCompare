<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_compare_info"
    android:layout_width="280px"
    android:layout_height="420px"
    android:layout_marginBottom="6px"
    android:layout_marginTop="6px"

    android:background="@mipmap/tips_back_gray"
    android:orientation="vertical"
    android:baselineAligned="false">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14px"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/main_compare_img1"
            android:layout_width="100px"
            android:layout_height="132px"
            android:background="@color/white_fff"
            android:padding="2px"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/main_compare_img2"
            android:layout_width="100px"
            android:layout_height="132px"
            android:layout_marginLeft="23px"
            android:layout_toRightOf="@+id/main_compare_img1"
            android:background="@color/white_fff"
            android:padding="2px"
            android:scaleType="fitXY" />
    </LinearLayout>

    <TextView

        android:id="@+id/main_compare_info_cardInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginRight="@dimen/dp12"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="5px"
        android:text="比对结果信息"
        android:textColor="@color/white_fff"
        android:layout_marginTop="26px"
        android:textSize="16px" />

<RelativeLayout
    android:layout_width="242px"
    android:layout_height="96px"
    android:layout_gravity="center"
    android:layout_margin="15px">
    <ImageView
        android:id="@+id/main_compare_info_img"
        android:layout_width="242px"
        android:layout_height="96px"
        android:src="@mipmap/compare_pass"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/main_compare_info_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="分值：70分"
        android:textColor="@color/color_00e335"
        android:textSize="22px"
        android:layout_alignBottom="@id/main_compare_info_img"
        android:layout_alignLeft="@id/main_compare_info_img"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="98px"
        />
</RelativeLayout>




</LinearLayout>