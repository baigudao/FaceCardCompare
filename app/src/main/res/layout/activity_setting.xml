<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:orientation="vertical"
    tools:context="com.taisau.facecardcompare.ui.setting.SettingActivity">

    <include layout="@layout/content_setting_title_bar" />

   <!-- <include layout="@layout/content_setting_interval_view" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ddd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15px"
        android:background="@color/color_ddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_default"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_display_setting"
            android:layout_width="match_parent"
            android:layout_height="88px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"
                android:text="显示设置"

                android:textColor="@color/color_333"
                android:textSize="26px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20px"
                android:src="@mipmap/ic_go" />
        </RelativeLayout>

        <View
            android:layout_width="738px"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="@color/color_ddd" />

        <RelativeLayout
            android:id="@+id/rl_compare_setting"
            android:layout_width="match_parent"
            android:layout_height="88px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"
                android:text="比对设置"
                android:textColor="@color/color_333"
                android:textSize="26px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20px"
                android:src="@mipmap/ic_go" />
        </RelativeLayout>

        <View
            android:layout_width="738px"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="@color/color_ddd" />

        <RelativeLayout
            android:id="@+id/rl_device_setting"
            android:layout_width="match_parent"
            android:layout_height="88px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"
                android:text="设备设置"
                android:textColor="@color/color_333"
                android:textSize="26px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20px"
                android:src="@mipmap/ic_go" />
        </RelativeLayout>

        <View
            android:layout_width="738px"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="@color/color_ddd" />

        <RelativeLayout
            android:id="@+id/rl_network_setting"
            android:layout_width="match_parent"
            android:layout_height="88px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"
                android:text="网络设置"
                android:textColor="@color/color_333"
                android:textSize="26px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20px"
                android:src="@mipmap/ic_go" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ddd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15px"
        android:background="@color/color_ddd" />

    <RelativeLayout
        android:id="@+id/rl_update_setting"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/color_white_default">

        <TextView
            android:id="@+id/tv_update_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30px"
            android:text="版本更新"
            android:textColor="@color/color_333"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/iv_new_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/tv_update_setting"
            android:src="@mipmap/ic_new"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30px"
            android:text="TAISAU1.0"
            android:textSize="26px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ddd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15px"
        android:background="@color/color_ddd" />
    <RelativeLayout
        android:id="@+id/rl_restore_default"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/color_white_default">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="恢复默认值"
            android:textColor="@color/color_333"
            android:textSize="26px" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ddd" />
</LinearLayout>

