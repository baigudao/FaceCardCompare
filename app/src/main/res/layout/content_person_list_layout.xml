<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="148px">
    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/person_list_avatar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19px"
        android:textColor="@color/color_7a7a7a"
        android:text="姓名：李雷雷\nID:100001"
        android:layout_marginLeft="55px"
        android:layout_centerVertical="true"
        android:lineSpacingExtra="21px"
        android:layout_toRightOf="@+id/person_list_avatar"
        android:id="@+id/person_list_name_id"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40px"
        android:src="@mipmap/tiaozhuan_icon"
        android:layout_centerVertical="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray_cfcfcf"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>